<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 50"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 500*" />
            <ColumnDefinition Width=" 100" />
            <ColumnDefinition  Width=" 500*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="LightPink" Orientation="Horizontal">
            <Label Content="學生" HorizontalAlignment="Left" Margin="50, 0, 0, 0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
            <ComboBox x:Name="StudentComboBox" Width="300" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"
Margin="20, 10, 0, 10" FontSize="14"/>
        </StackPanel>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="14" Margin="50,0,0,0" VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
        <TabControl Grid.Row="1" Background="#E2EAF4">
            <TabItem Header="以教師分類課程">
                <TreeView x:Name="TeacherTreeView" Background="#E7DDFF" >

                </TreeView>
            </TabItem>
            <TabItem Header="所有課程">
                <ListBox x:Name="CourseListBox" Background="#FFF3E8F9">

                </ListBox>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Grid.Column="1" Background="#FFF5F5F3">
            <Button x:Name="AddButton" Content="選課" Width="80" Height="50" Margin="0, 50, 0, 0" FontSize="16" FontWeight="Bold" />
            <Button x:Name="DeleteButton" Content="退選" Width="80" Height="50" Margin="0, 50, 0, 0" FontSize="16" FontWeight="Bold" />
            <Button x:Name="SaveButton" Content="存檔" Width="80" Height="50" Margin="0, 50, 0, 0" FontSize="16" FontWeight="Bold" />
        </StackPanel>
        <ListView Grid.Row="1" Background="#FFFFE0" Grid.Column="2">

        </ListView>
    </Grid>
</Window>